<section class="form-section vh-100">
  <div class="form-container">
    <h1 class="mb-5">Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation", novalidate: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-5">
        <%= f.email_field :email, placeholder:"Email", autofocus: true, class:"form-control", required: true  %>
        <div class="invalid-feedback">Please enter a valid password.</div>
      </div>

      <%= f.submit "Send me reset password instructions", class: "form-button" %>
    <% end %>
  </div>
</section>
