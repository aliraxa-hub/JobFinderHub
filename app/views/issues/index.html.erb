<div class="bg-gray py-3 mb-4 ">
  <h2 class="ms-5 mt-3 fw-bold">Admin Assistance Board</h2>
</div>

<div class="d-flex justify-content-end container">
  <%= link_to "Send mail to Admin", new_issue_path, class:"btn btn-primary" %>
</div>

<div id="issues">
  <% @issues.each do |issue| %>
    <div class="container mt-3">
      <div id="<%= dom_id issue %>">
        <div class="filter-result">
          <div class="job-box d-md-flex align-items-center justify-content-between mb-30 mt-3">
            <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
              <div class="job-content">
                <h5 class="text-md-left"><%= issue.title %></h5>
                <p class="mt-3">
                <p class="description">
                  <%= truncate(issue.description, length: 100) %>
                </p>
                </p>
              </div>

            </div>
            <div class="job-right my-4 flex-shrink-0">
              <%= link_to "Show mail", issue, class: "btn d-block w-100 d-sm-inline-block btn-light" %>
            </div>
          </div>
        </div>
      </div>
    </div>

<% end %>
</div>
